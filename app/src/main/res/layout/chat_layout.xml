<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView6"
    android:background="@drawable/ca1"
    android:fillViewport="false"
    android:isScrollContainer="false">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
//Search for Subject layout

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/chat_back"
            android:clickable="true"
            android:id="@+id/ChangeThemeicon"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Search.(Weeds or Farming)"
            android:id="@+id/Chat_Search_Edit_Text"
            android:visibility="invisible"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:id="@+id/Chat_Search_ImageView"
            android:clickable="true"
            android:src="@drawable/search_icon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Chat"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="6dp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textSize="30dp"/>
    </LinearLayout>


    <ListView
        android:background="#ffcccc"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="false"
        android:scrollingCache="false"
        android:smoothScrollbar="true"
        android:id="@+id/Chat_List_View"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:nestedScrollingEnabled="true"></ListView>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_gravity="center"/>
        <EditText
            android:background="@drawable/toolbar_shape2"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:hint="Sender Name"
            android:id="@+id/Chat_Name_Edit_Text"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:inputType="text" />
        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"

            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"
            android:layout_gravity="center"/>
        <EditText
            android:background="@drawable/toolbar_shape2"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Write Message"
            android:id="@+id/Chat_Message_Edit_Text"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/Chat_Close_Button"
            android:textSize="15dp"
            android:background="@drawable/chat_buttons_shape"
            android:text="Close "/>
        <Button
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/chat_buttons_shape"
            android:id="@+id/Chat_Send_Message_Button"
            android:textSize="15dp"
            android:text="Send "/>

    </LinearLayout>


</LinearLayout>

</ScrollView>