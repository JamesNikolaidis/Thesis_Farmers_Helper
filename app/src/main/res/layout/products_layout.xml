<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
       >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="27dp"
            android:id="@+id/DrugForTextViewDes"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true"
            android:clickable="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/DrugFor"

            android:layout_marginTop="12dp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/textView6"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/tip_shape"
            />



        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="185dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_height="match_parent"
            android:id="@+id/productNameText"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="23dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/productName"
            android:background="@drawable/tip_shape"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"

        >

        <TextView
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:id="@+id/productPriceText"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="23dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/productPrice"
            android:background="@drawable/tip_shape"
            android:gravity="center"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"

        android:weightSum="1">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/productManufacterText"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="23dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/productManufacter"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/tip_shape"
            />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="27dp"
        android:id="@+id/DistributerTextViewDes"
        android:textColor="@android:color/black"
        android:layout_marginTop="38dp"
        android:layout_alignParentStart="true"
        android:clickable="false"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/Distributer"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="?android:attr/textColorHighlight"
        android:nestedScrollingEnabled="true"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:verticalScrollbarPosition="defaultPosition"
        android:fadeScrollbars="false"
         android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:divider="@drawable/divider_shape"
        android:headerDividersEnabled="true">

    </ListView>









    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="27dp"
        android:id="@+id/ActiveSubstanceTextViewDes"
        android:textColor="@android:color/black"
        android:layout_marginTop="38dp"
        android:layout_alignParentStart="true"
        android:clickable="false"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/ActiveSubstance"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:background="?android:attr/textColorHighlight"
        android:nestedScrollingEnabled="true"
        android:divider="@drawable/divider_shape">

    </ListView>



</LinearLayout>

</ScrollView>